<style>
    .email-check-icons-contact-us {
        position: relative;
        left: 94%;
        top: -37%;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        pointer-events: none;
        width: 30px !important;
        height: 30px !important;
        transition: all .25s ease;
    }
    @media screen and (max-width:768px) {
        
    .email-check-icons-contact-us {
        left: 90%;
        top: -37%;
    }
    }
</style>
<body >

       
        <div class="stars"></div>
        <div class="twinkling"></div>
        <div class="clouds"></div>
          <!-- navbar -->
    <%- include("./partials/nav.ejs") %>

        <div class="main" >
<br><br><br>
            <section class="contact-us justify-content-left">

            
                <div style="">	
                    <div class="col col-lg-12 col-md-12 " style="margin-bottom: 5vh; padding: 0 !important;" >		
                        <h1 id="text" class="con-main-title">CONTACT US</h1>
                        <p class="desc-con">
                            
                            Weâ€™d love to hear from you, be it queries, questions or suggestions!
                        </p>
                    </div>
    
                </div>
    
                <form style="font-size: 20px !important;" method = "POST" action = "contactus_done">
    
                    <div class="form-row row">
    
                        <div class="col-12 col-lg-6 col-md-6" >
                            
                            <label for="exampleFormControlInput1" class="con-title" style="padding-bottom: 0.5vw;" >NAME</label>
                            <br>
                            <input type="text" id="name" name = "name">
    
                        </div>
                        <div class="col-12 col-lg-6 col-md-6 text-left email-ext" >
                            
                            <label for="exampleFormControlInput1" class="con-title" style="padding-bottom: 0.5vw;">EMAIL ID</label>
                            <br>
                            <input type="email" oninput="handleInput(event)" id="email" name = "email" >
                            <div class="icons email-check-icons-contact-us align-self-center">
                                <i class='check-icon bx bxs-check-circle check' ></i>
                                <i class='check-icon bx bxs-x-circle x' ></i>
                              </div>
                        
                        </div>
                        
                    </div>
    
                    
                    <div class="form-group row justify-content-start reason " style="padding-right: 20px;">

                        <div class="extra-con col-sm-6 col-md-4"   >
    
                            <label id="t" class="con-title" for="exampleFormControlSelect1">REASONS FOR CONTACTING</label>
                        </div>
                        
                        <select name = "reason" class="form-control col-sm-6 col-md-5" id="exampleFormControlSelect1" style=" font-size: 2vh; color: white ;background: transparent !important;">
                            
                          <option value = "SPONSORSHIP" style="background-color: transparent !important; color: black;">SPONSORSHIP</option>
                          <option value = "APPRECIATION" style="background-color: transparent !important;">APPRECIATION</option>
                          <option value = "QUERY" style="background-color: transparent !important;">QUERY</option>
                          <option  value = "SUGGESTION" style="background-color: transparent !important;">SUGGESTION</option>
                          
                        </select>
                    </div>
    
                    <div class="row">
    
                        <div class="col-12 col-lg-12 col-md-12 msg" >
    
                            <div class="form-group">
                                <label for="exampleFormControlInput1" class="con-title" style="padding-bottom: 0.5vw;">MESSAGE</label>
                                <textarea name="msg" id = "msg" class="form-control" placeholder="Write Awayy!" id="textarea" style="width: 100%; height: 120px;color: white !important;"></textarea>
    
                            </div>
    
                            <br>
                            <br>
                            <h3>

                                <button type="reset" id="b1">RESET</button>
                                <button type="submit" id="s">SUBMIT</button>
                            </h3>

    
                
                        </div>
                    </div>
    
                </form>
                
    
            </section>

            
    
        </div>
